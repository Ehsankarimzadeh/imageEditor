<Window x:Class="ImagesProcessing.AddImage.AddImagePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImagesProcessing.AddImage"
        mc:Ignorable="d"
        Title="Add Image Page" Height="450" Width="400">
    <Grid>
        <Button x:Name="saveBtn" Content="Save" HorizontalAlignment="Left" Margin="295,361,0,0" VerticalAlignment="Top" Width="75" Height="37" Background="Green" Foreground="White" Click="saveBtn_Click"/>
        <Button x:Name="cancelBtn" Content="Cancel" HorizontalAlignment="Left" Margin="200,361,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="1.348,1.164" Height="37" Background="Red" Foreground="White" Click="cancelBtn_Click"/>
        <Image x:Name="imageBox" HorizontalAlignment="Stretch" Height="315" Margin="10,10,10,10" VerticalAlignment="Top" Width="374"/>

    </Grid>
</Window>
